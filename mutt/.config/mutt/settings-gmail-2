# Section dealing with divergances
unset maildir_trash
unmailboxes "=peka"
subscribe arch-dev-public arch-general # mailing lists

################################
# Section with common settings #
################################

# IMAP settings
set imap_user = $my_gmail_2_imapuser
set imap_pass = $my_gmail_2_imap
set folder = "imaps://imap.gmail.com:993"

unset mbox
set postponed = "+[Gmail]/Drafts"
set spoolfile = "+INBOX"
set record = "/dev/null" # where to save sent messages

# SMTP settings
set smtp_url = $my_gmail_2_smtpurl
set smtp_pass = $my_gmail_2_smtp
set from = $my_gmail_2_imapuser
set realname = "Nicolas J."

# Misc settings
set ssl_use_sslv3="yes"
# unset smtp_authenticators
# unset imap_authenticators
