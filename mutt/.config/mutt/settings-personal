################################
# Section with common settings #
################################

# IMAP settings
set imap_user = $my_personal_imapuser
set imap_pass = $my_personal_imap
set folder = "imap://outlook.office365.com/"

set mbox = "imap://outlook.office365.com/INBOX"
set postponed = "imap://outlook.office365.com/Drafts"
set spoolfile = "imap://outlook.office365.com/INBOX"
set record = "imap://outlook.office365.com/Sent Items"

# SMTP settings
set smtp_url = $my_personal_smtpurl
set smtp_pass = $my_personal_smtp
set from = $my_personal_imapuser
set realname = $my_personal_realname

# Misc settings
set ssl_use_sslv3="yes"
