" Keep ~ clean
set runtimepath=~/.config/vimperator

" Which  elements to show
set toolbars=nonavigation,tabs

" Hide scrollbars
set noscrollbars

" Items which are completed at the :open prompt
set cpt=l

" Show Bookmark sidebar
":sidebar Bookmarks

" Don't beep
:set noerrorbells

" Misc
set showstatuslinks=1
set nofocuscontent
set smartcase
set incsearch
set history=500

" Use letters instead of numbers for hints
:set hintchars=hjklasdfgyuiopqwertnmzxcvb
":highlight Hint font-family:"Dina";font-size:110%;color:#FFDBB8;background-color:#777780;padding:2px;
":highlight HintElem font-family:"Dina";font-size:100%;color:##FFDBB8;background-color:#1D1D1E;


"===[ Mappings ]========================================================

" Change how much we scroll
noremap j 11j
noremap k 11k

" Let us make mappings for google
map s :open google 
map S :tabopen google 

" Press ',' to go to previous tab
noremap , :tabprevious<CR>

" Press '.' to go to next tab
noremap . :tabnext<CR>


